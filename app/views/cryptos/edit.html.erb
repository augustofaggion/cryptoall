<h1 class="">Edit Crypto</h1>

<%= form_with model: @crypto, url: crypto_path(@crypto), method: :patch, local: true do |form| %>
  <div>
    <%= form.label :crypto_name, "Crypto Name" %>
    <%= form.text_field :crypto_name, class: "", required: true %>
  </div>
  <div>
    <%= form.label :crypto_code, "Crypto Code" %>
    <%= form.text_field :crypto_code, class: "", required: true %>
  </div>
  <div>
    <%= form.label :crypto_amount, "Crypto Amount" %>
    <%= form.number_field :crypto_amount, class: "", required: true %>
  </div>
  <div>
    <%= form.label :euro_invested, "Euro Invested" %>
    <%= form.number_field :euro_invested, class: "", required: true %>
  </div>
  <div class="">
    <%= form.submit "Update Crypto", class: "" %>
  </div>
<% end %>

<%= link_to "Back to All Cryptos", cryptos_path, class: "" %>
