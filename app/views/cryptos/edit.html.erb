<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-primary text-center">Edit Crypto</h1>

      <div class="card shadow p-4">
        <%= form_with model: @crypto, url: crypto_path(@crypto), method: :patch, local: true do |form| %>

          <div class="mb-3">
            <%= form.label :crypto_name, "Crypto Name", class: "form-label" %>
            <%= form.text_field :crypto_name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :crypto_code, "Crypto Code", class: "form-label" %>
            <%= form.text_field :crypto_code, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :crypto_amount, "Crypto Amount", class: "form-label" %>
            <%= form.number_field :crypto_amount, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :euro_invested, "Euro Invested", class: "form-label" %>
            <%= form.number_field :euro_invested, class: "form-control", required: true %>
          </div>

          <div class="d-flex justify-content-between">
            <%= form.submit "Update Crypto", class: "btn btn-primary" %>
            <%= link_to "Back to All Cryptos", cryptos_path, class: "btn btn-secondary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
