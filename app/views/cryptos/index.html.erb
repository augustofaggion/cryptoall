<div class="">
  <h1 class="">All Yours invested Coins</h1>

<%= link_to 'Back to Dashboard', dashboard_path %>
<form action="/cryptos" method="post" class="">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <!-- First row: Crypto Name and Crypto Code -->
  <div class="">
    <div class="">
      <label for="crypto_name" class="">Crypto Name:</label>
      <input
        type="text"
        name="crypto[crypto_name]"
        id="crypto_name"
        placeholder="Enter crypto name"
        class=""
      >
    </div>

    <div class="">
      <label for="crypto_code" class="">Crypto Code:</label>
      <input
        type="text"
        name="crypto[crypto_code]"
        id="crypto_code"
        placeholder="Enter crypto code"
        class=""
      >
    </div>
  </div>

  <!-- Second row: Amount Bought and Euro Invested -->
  <div class="">
    <div class="">
      <label for="crypto_amount" class="">Amount Bought:</label>
      <input
        type="text"
        name="crypto[crypto_amount]"
        id="crypto_amount"
        placeholder="Enter amount bought"
        class=""
      >
    </div>

    <div class="">
      <label for="euro_invested" class="">Euro Invested:</label>
      <input
        type="number"
        name="crypto[euro_invested]"
        id="euro_invested"
        placeholder="Enter euros invested"
        class=""
      >
    </div>
  </div>

  <button
    type="submit"
    class=""
  >
    Add a crypto
  </button>
</form>




  <% if @cryptos.any? %>
    <table class="">
      <thead>
        <tr class="">
          <th class="">Name</th>
          <th class="">Code</th>
          <th>Amount</th>
          <th class="">Invested (€)</th>
        </tr>
      </thead>
      <tbody>
        <% @cryptos.each do |crypto| %>
          <tr class="">
            <td class=""><%= crypto.crypto_name %></td>
            <td class=""><%= crypto.crypto_code %></td>
            <td><%= crypto.crypto_amount%></td>
            <td class=""><%= number_to_currency(crypto.euro_invested, unit: '€') %></td>
           <td class="">
            <%= link_to 'Edit', edit_crypto_path(crypto), class: '' %>
            |
            <%= form_with model: crypto, method: :delete, data: { confirm: 'Are you sure?' }, class: '' do %>
  <button type="submit" class="">Delete</button>
<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="">No cryptos found.</p>
  <% end %>
</div>
